{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: gcc génerer tous les fichiers",
			"command": "/usr/bin/gcc",
			"args": [
				"-g",
				"${workspaceFolder}/*.c",
				"${workspaceFolder}/models/layers/*.c",
				"${workspaceFolder}/models/activations/*.c",
				"${workspaceFolder}/models/losses/*.c",
				"${workspaceFolder}/models/optimizers/*.c",
				"-o",
				"${workspaceFolder}/bin/${fileBasenameNoExtension}",
				"-lm",
				"-fopenmp"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compilateur : /usr/bin/gcc"
		}
	]
}